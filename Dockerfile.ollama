# Dockerfile.ollama

# Use a base image, for example, Ubuntu
FROM ubuntu:20.04

# Install necessary packages
RUN apt-get update && apt-get install -y \
    python3.12 \
    python3-pip

# Install Ollama (replace with actual installation command)
RUN pip install ollama 

# Expose the default port for Ollama
EXPOSE 8000

# Run Ollama when the container launches
CMD ["ollama", "start"]  # Adjust this command based on how Ollama is started